<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="163dp"
        android:layout_height="205dp"
        android:backgroundTint="#343333"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="139dp"
            app:srcCompat="@drawable/ic_burguer_chicken"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="139dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_nome_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken Burguer"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            
            <TextView
                android:id="@+id/tv_preco_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 6,99"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_below="@+id/tv_nome_produto"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/btn_add_carrinho"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/btn_add_carrinho"
                android:layout_width="32dp"
                android:layout_height="35dp"
                android:layout_below="@+id/tv_nome_produto"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#33FFFFFF"
                android:src="@drawable/ic_add" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>